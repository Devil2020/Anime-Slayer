<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fireworksImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_firework"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/yearValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fireworksImageView"
        app:layout_constraintTop_toTopOf="@id/fireworksImageView"
        app:layout_constraintBottom_toBottomOf="@id/fireworksImageView"
        android:layout_margin="@dimen/_10sdp"
        android:textAppearance="@style/Baloothambi2_medium"
        android:textColor="@color/red_F87575"
        tools:text="2021"
        android:textSize="@dimen/_16ssp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>