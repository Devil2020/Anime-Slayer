<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="animeItem"
            type="com.morse.animeslayer.domain.AnimeListResponse.Anime" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@android:color/transparent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:scaleType="fitXY"
            android:src="@drawable/splash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/anime_rate_tv" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_anime_item_name_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Shingeki no Kyojin: The Final Seaso"
            android:textAppearance="@style/Baloothambi2_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/anime_rate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rate_background"
            android:gravity="center"
            android:text="6.8"
            android:textAppearance="@style/Baloothambi2_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
