<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        tools:context="com.expertapps.base.dialog.PermissionRationaleDialog">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/connectLogoImageView"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_app_icon_rounded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/messageTitleTextView"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/messageTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/read_write_permissions_rentational_header_label"
            android:textAppearance="@style/Baloothambi2_medium"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@id/connectLogoImageView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/read_write_permissions_rentational_body_label"
            android:textAppearance="@style/Baloothambi2_medium"
            android:textColor="@color/gray_666666"
            android:gravity="center|start"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/messageTitleTextView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/positiveButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_32"
            android:elevation="@dimen/dp_0"
            android:text="@string/go_to_setting_label"
            android:textAllCaps="true"
            android:textAppearance="@style/Baloothambi2_medium"
            android:textColor="@color/orange_F87F0F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messageTextView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/actionButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:elevation="@dimen/dp_0"
            android:text="@string/cancel_label"
            android:textAllCaps="true"
            android:textAppearance="@style/Baloothambi2_medium"
            android:textColor="@color/orange_F87F0F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messageTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>